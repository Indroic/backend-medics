{
    "version": 2,
    "builds": [
        {
            "src": "core/wsgi.py",
            "use": "@vercel/python",
            "install": ["pip install -r requirements.txt", "python -m pip install -r requirements.txt", "python manage.py collectstatic --no-input", "python manage.py makemigrations", "python manage.py migrate"],
            "config":{
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "core/wsgi.py"
        }
    ]
}